{
  "name": "simple-memory-mcp",
  "version": "1.0.13",
  "description": "Simple memory MCP server for storing and retrieving memories with tags",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "simple-memory": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "setup": "npm install && npm run build && npm link && npm run configure",
    "configure": "node scripts/setup-vscode.js",
    "build": "tsc",
    "build:release": "node scripts/bump-version.js patch && tsc",
    "postbuild": "node -e \"if (process.platform !== 'win32') { require('child_process').execSync('chmod +x dist/index.js'); }\"",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "cli": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "npm run build && node dist/tests/memory-server-tests.js",
    "test:perf": "npm run build && node dist/tests/performance-test.js",
    "test:migration": "npm run build && node dist/tests/migration-test.js",
    "test:export-import": "npm run build && node dist/tests/export-import-test.js",
    "test:all": "npm run test && npm run test:perf && npm run test:export-import",
    "benchmark": "npm run build && node dist/tests/performance-benchmark.js",
    "link": "npm run build && npm link",
    "unlink": "npm unlink -g"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.11",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory",
    "storage",
    "sqlite",
    "tags",
    "ai",
    "llm"
  ],
  "author": "chrisribe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisribe/simple-memory-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/chrisribe/simple-memory-mcp/issues"
  },
  "homepage": "https://github.com/chrisribe/simple-memory-mcp#readme"
}
